## <up to here>
alias pssynergy='ps awx|grep synergy'
alias histecho='history|grep echo'
alias histroute='history|grep route'
alias histssh='history|grep ssh'
alias histsynergy='history|grep synergy'
alias udu='sudo apt-get update && sudo apt-get dist-upgrade' ## sudo should be included here, otherwise this alias line doesn't work.
alias histeasy='history|grep easy'

# 1/4/2013 Remove files unncessary files that are generated upon "make eclipse-project" with catkin.
alias rm_eclipse-project_remainder='rm -fR catkin* CATKIN_IGNORE cmake_install.cmake devel/ gtest/ Makefile.ros test_results'

